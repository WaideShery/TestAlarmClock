            android:id="@+id/chbDay7"
            android:layout_width="@dimen/week_day_checkbox_size"
            android:layout_height="@dimen/week_day_checkbox_size"
            android:background="@drawable/week_day_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@{WeekBinding.getDayName(6)}"
            android:textColor="@color/week_day_text_color"
            android:textSize="@dimen/week_day_text_size"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Вс"/>
