<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.neirx.testalarmclock.ui.app_base.binding.WeekBinding"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chbDay1"
            android:layout_width="@dimen/week_day_checkbox_size"
            android:layout_height="@dimen/week_day_checkbox_size"
            android:background="@drawable/week_day_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@{WeekBinding.getDayName(0)}"
            android:textColor="@color/week_day_text_color"
            android:textSize="@dimen/week_day_text_size"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Пн"/>

        <CheckBox
            android:id="@+id/chbDay2"
            android:layout_width="@dimen/week_day_checkbox_size"
            android:layout_height="@dimen/week_day_checkbox_size"
            android:background="@drawable/week_day_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@{WeekBinding.getDayName(1)}"
            android:textColor="@color/week_day_text_color"
            android:textSize="@dimen/week_day_text_size"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Вт"/>

